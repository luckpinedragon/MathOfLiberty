<h1>Pages#search</h1>

  <%= sort_link(@q, :title, 'title', default_order: :desc) %>
  <%= sort_link(@q, :genre, 'genre', default_order: :desc) %>
  <%= sort_link(@q, :chapter, 'chapter', default_order: :desc) %>
  <% @topics.each do |topic| %>
    <li>
      <div>
        <%= link_to topic.title, topics_show_path(id: topic.id) %>
      </div>
    </li>
  <% end %>
  
  <%= paginate @topics %>
    
